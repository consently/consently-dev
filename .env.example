# =============================================================================
# API Setu / DigiLocker Age Verification (DPDPA 2023 Compliance)
# =============================================================================
# Get credentials from: https://consume.apisetu.gov.in
# Documentation: https://apisetu.gov.in/public/marketplace/api/digilocker

# Your API Setu Client/Issuer ID (e.g., in.consently)
APISETU_CLIENT_ID=your-apisetu-client-id

# Your API Setu Client Secret
APISETU_CLIENT_SECRET=your-apisetu-client-secret

# OAuth callback URL (must match API Setu dashboard configuration)
APISETU_REDIRECT_URI=https://www.consently.in/api/auth/meripehchaan/callback

# API Setu Base URL (production)
APISETU_BASE_URL=https://api.digitallocker.gov.in

# Set to 'true' for development/testing (uses mock responses)
APISETU_USE_MOCK=false

# Set to 'true' to use API Setu sandbox environment
APISETU_USE_SANDBOX=false

# DigiLocker scope for age verification
DIGILOCKER_AGE_VERIFICATION_SCOPE=age_verification

# JWT Secret for signing age verification assertions (generate a secure 32+ byte secret)
AGE_VERIFICATION_JWT_SECRET=your-secure-jwt-secret-min-32-bytes
